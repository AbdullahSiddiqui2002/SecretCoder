@model IEnumerable<Aptech_Vision_Project.Models.Instructor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="pt-4 px-4">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table pt-4 px-4 text-center">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>

                <th>
                    Role
                </th>
                <th>
                    Rating
                </th>
                <th>
                    Reviews
                </th>
                <th>
                    Enrolled Students
                </th>
                <th>
                    Courses Teached
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @* @Html.DisplayFor(modelItem => item.Instructorimage) *@
                        <img src="@Html.DisplayFor(modelItem => item.Instructorimage)" style="height:30px; width:30px; border-radius:50%;">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Instructorname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Instructoremail)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Instructorrole)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Instructorrating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Instructorreviews)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Enrolledstudents)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Coursesteach)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary m-2"><i class="fa-solid fa-pen-to-square"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary m-2"><i class="fa-solid fa-eye"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary m-2"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>