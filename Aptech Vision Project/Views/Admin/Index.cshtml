@model Aptech_Vision_Project.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- Sale & Revenue Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-laptop fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Courses</p>
                    <h6 class="mb-0">@Model.TotalCourses</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa-solid fa-person-chalkboard fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Instructors</p>
                    <h6 class="mb-0">@Model.TotalInstructors</h6>
                </div>
            </div>
        </div>
      
    </div>
</div>


