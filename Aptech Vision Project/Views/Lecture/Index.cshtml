@model IEnumerable<Aptech_Vision_Project.Models.Lecture>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="pt-4 px-4">
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
    <table class="table pt-4 px-4 text-center">
    <thead>
        <tr>
                <th>
                    #
                </th>
            <th>
                Lecture
            </th>
            <th>
                Course Name
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
            @{
                var serialNumber = 1; // Initialize the serial number counter
            }
@foreach (var item in Model) {
        <tr>
                    <td>
                        @serialNumber
                    </td>
            <td>
                    @Html.Raw(item.Lecture1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Coursename)
            </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary m-2"><i class="fa-solid fa-pen-to-square"></i></a> |
                        @* <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary m-2"><i class="fa-solid fa-eye"></i></a> | *@
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary m-2"><i class="fa-solid fa-trash"></i></a>
                    </td>
        </tr>
                serialNumber++;
}
    </tbody>
</table>
</div>