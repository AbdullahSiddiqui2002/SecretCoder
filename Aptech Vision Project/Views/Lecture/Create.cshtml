@model Aptech_Vision_Project.Models.Lecture

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="container-fluid pt-4 px-4">
<h1>Create</h1>

<h4>Lecture</h4>
<hr />
    <div class="row g-4">
        <div class="bg-secondary rounded h-100 p-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-sm-12 col-xl-12 mb-3">
            <div class="form-group">
                <label asp-for="Lecture1" class="control-label form-label">Lecture</label>
                <textarea asp-for="Lecture1" rows="5" class="form-control" required="true"></textarea>
      
                <span asp-validation-for="Lecture1" class="text-danger"></span>
            </div>
            </div>
            <div class="col-sm-12 col-xl-12 mb-3">
            <div class="form-group">
                <label asp-for="Courseid" class="control-label form-label">Select Course Name</label>
                <select asp-for="Courseid" class="form-control" style="background-color: black;" asp-items="ViewBag.Courses"></select>
            </div>
            </div>
           <div class="col-sm-12 col-xl-12 mt-4 mb-2">

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-primary w-100" />
                    </div>
                </div>
        </form>
    </div>
</div>

<div class="mt-3">
        <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
    </div>
</div>
