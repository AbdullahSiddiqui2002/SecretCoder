@model IEnumerable<Aptech_Vision_Project.Models.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="pt-4 px-4">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table pt-4 px-4 text-center">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Course Name
                </th>
                <th>
                    Course Instructor
                </th>
                <th>
                    Course Level
                </th>
                <th>
                    Students Enrolled
                </th>
                <th>
                    Course Fee
                </th>
                <th>
                    Language
                </th>
                <th>
                    Lectures
                </th>
                <th>
                    Deadline
                </th>
                <th>
                    Certificate
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                var serialNumber = 1; // Initialize the serial number counter
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @serialNumber
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Coursename)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseinstructorNavigation.Instructorname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Courselevel.Courselevel1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Studentsenrolled)
                    </td>
                    <td>
                       Rs. @Html.DisplayFor(modelItem => item.Coursefee)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Language)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lectures)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Deadline) Months
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Certificate)
                    </td>


                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary m-2"><i class="fa-solid fa-pen-to-square"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary m-2"><i class="fa-solid fa-eye"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary m-2"><i class="fa-solid fa-trash"></i></a>
                    </td>
                 
                </tr>
                serialNumber++;
            }
        </tbody>
    </table>
</div>