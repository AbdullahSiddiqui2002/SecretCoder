<!-- Courses Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center px-3">Popular Courses</h6>
            <h1 class="mb-5" style="color: #fb873f;">Explore new and trending free online courses</h1>
        </div>
        <div class="row g-4 py-2">
            @foreach (var item in Model.Courses)
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="course-item shadow">
                        <div class="position-relative overflow-hidden text-light image">
                            <img class="img-fluid" src="@Html.DisplayFor(modelItem => item.Courseimage)" alt="">
                            @* <div style="position:absolute;top: 15px;left: 16px; font-size:12px; border-radius:3px; background-color:#fb873f;"
                                 class="px-2 py-1 fw-bold text-uppercase">
                                FREE
                            </div> *@

                        </div>
                        <div class="p-2 pb-0">

                            <h5 class="mb-1"><a asp-action="Coursedetails" asp-route-id="@item.Id" class="text-dark">@Html.DisplayFor(modelItem => item.Coursename) </a></h5>
                        </div>
                        <div class="d-flex">
                            <small class="flex-fill text-center py-1 px-2">
                                <i class="fa fa-star text-warning me-2"></i>
                                @Html.DisplayFor(modelItem => item.Courserating)
                            </small>
                            <small class="flex-fill text-center py-1 px-2">
                                <i class="fa fa-user-graduate me-2"></i>@Html.DisplayFor(modelItem => item.Studentsenrolled) L+
                                Learners
                            </small>
                            <small class="flex-fill text-center py-1 px-2">
                                <i class="fa fa-user me-2"></i>@Html.DisplayFor(modelItem => item.Courselevelid)
                            </small>
                        </div>
                        <div class="d-flex">
                            <small class="flex-fill text-left p-2 px-2">
                                <i class="fa fa-clock me-2"></i>@Html.DisplayFor(modelItem => item.Courseduration)
                                Hrs
                            </small>
                            <small class="py-1 px-2 fw-bold fs-6 text-center">₹ 0</small>
                            <small class=" text-primary py-1 px-2 fw-bold fs-6" style="float:right;">
                                <a asp-action="Coursedetails" asp-route-id="@item.Id">
                                    Enroll
                                    Now
                                </a><i class="fa fa-chevron-right me-2 fs-10"></i>
                            </small>
                        </div>
                    </div>
                </div>

            }

           
        </div>

    </div>
</div>
<!-- Courses End -->
